# Lazy load zoxide (saves ~50ms)
_init_zoxide() {
  unfunction _init_zoxide z zi 2>/dev/null
  eval "$(zoxide init zsh)"
}
z()  { _init_zoxide; z "$@" }
zi() { _init_zoxide; zi "$@" }

# Lazy load atuin - triggers on Up arrow or Ctrl+R
_atuin_loaded=0
_init_atuin_and_up() {
  if (( ! _atuin_loaded )); then
    _atuin_loaded=1
    if [[ -f "$HOME/.atuin/bin/env" ]]; then
      . "$HOME/.atuin/bin/env"
      eval "$(atuin init zsh)"
    fi
  fi
  # Call the real up-line-or-history or atuin widget
  if (( $+functions[_atuin_up_search_widget] )); then
    _atuin_up_search_widget
  else
    zle up-line-or-history
  fi
}
zle -N _init_atuin_and_up

_init_atuin_and_search() {
  if (( ! _atuin_loaded )); then
    _atuin_loaded=1
    if [[ -f "$HOME/.atuin/bin/env" ]]; then
      . "$HOME/.atuin/bin/env"
      eval "$(atuin init zsh)"
    fi
  fi
  if (( $+functions[_atuin_search_widget] )); then
    _atuin_search_widget
  else
    zle history-incremental-search-backward
  fi
}
zle -N _init_atuin_and_search

# Bind Up arrow and Ctrl+R to lazy-load atuin
bindkey '^[[A' _init_atuin_and_up      # Up arrow
bindkey '^[OA' _init_atuin_and_up      # Up arrow (alternate)
bindkey '^r' _init_atuin_and_search    # Ctrl+R
bindkey -M vicmd 'k' _init_atuin_and_up # Vi mode: k for up

# Lazy load direnv - triggers on cd
_direnv_loaded=0
_init_direnv() {
  if (( ! _direnv_loaded )); then
    _direnv_loaded=1
    if command -v direnv &>/dev/null; then
      eval "$(direnv hook zsh)"
    fi
  fi
}
add-zsh-hook chpwd _init_direnv
