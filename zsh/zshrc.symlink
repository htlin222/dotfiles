# Paths - cached checks for better performance
_cached_path_check() {
  local cache_file="$ZSH_CACHE_DIR/.path_cache"
  if [[ ! -f "$cache_file" || "$cache_file" -ot ~/.zshrc ]]; then
    {
      [[ -d "$HOME/.codeium/windsurf/bin" ]] && echo "CODEIUM_EXISTS=1"
      [[ -d "$HOME/.cache/lm-studio/bin" ]] && echo "LMSTUDIO_EXISTS=1"
      # pnpm path differs by OS
      if [[ -n "$IS_MAC" ]]; then
        [[ -d "$HOME/Library/pnpm" ]] && echo "PNPM_EXISTS=1"
      else
        [[ -d "$HOME/.local/share/pnpm" ]] && echo "PNPM_EXISTS=1"
      fi
    } > "$cache_file"
  fi
  source "$cache_file"
}
_cached_path_check

# Add paths only if they exist
[[ "$CODEIUM_EXISTS" == "1" ]] && export PATH="$HOME/.codeium/windsurf/bin:$PATH"
[[ "$LMSTUDIO_EXISTS" == "1" ]] && export PATH="$PATH:$HOME/.cache/lm-studio/bin"
if [[ "$PNPM_EXISTS" == "1" ]]; then
  if [[ -n "$IS_MAC" ]]; then
    export PNPM_HOME="$HOME/Library/pnpm"
  else
    export PNPM_HOME="$HOME/.local/share/pnpm"
  fi
  case ":$PATH:" in
    *":$PNPM_HOME:"*) ;;
    *) export PATH="$PNPM_HOME:$PATH" ;;
  esac
fi

# Deferred initialization for heavy tools
_deferred_init() {
  # Forgit (deferred)
  if command -v brew >/dev/null 2>&1; then
    local forgit_path="$(brew --prefix)/share/forgit"
    export PATH="$PATH:$forgit_path"
    [[ -f "$HOMEBREW_PREFIX/share/forgit/forgit.plugin.zsh" ]] && source "$HOMEBREW_PREFIX/share/forgit/forgit.plugin.zsh"
  fi

}


