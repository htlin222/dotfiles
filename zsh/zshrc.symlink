# Lazy load fnm (Node version manager)
_load_fnm() {
  if [[ -n "$IS_MAC" ]]; then
    local fnm_path="$HOME/Library/Application Support/fnm"
  else
    local fnm_path="$HOME/.local/share/fnm"
  fi
  if [[ -d "$fnm_path" ]]; then
    export PATH="$fnm_path:$PATH"
    eval "$(fnm env)"
  fi
}

# Lazy load broot
_load_broot() {
  [[ -f "$HOME/.config/broot/launcher/bash/br" ]] && source "$HOME/.config/broot/launcher/bash/br"
}
