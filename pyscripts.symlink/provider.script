import json
import sys
import urllib.parse


def main(input):
    query = input
    query = urllib.parse.quote(query)
    items = [
        {"type": "text", "value": f"Input {input}"},
        {
            "type": "url",
            "label": f"Google {input}",
            "value": f"https://google.com/search?q={query}",
        },
    ]

    print(json.dumps(items))


if __name__ == "__main__":
    main(sys.argv[1])
